{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile.standalone"
  },
  "deploy": {
    "startCommand": "python -m uvicorn standalone_webhook:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on_failure"
  },
  "environments": {
    "production": {
      "variables": {
        "TELEGRAM_BOT_TOKEN": null,
        "WEBHOOK_SECRET_TOKEN": null
      }
    }
  }
}