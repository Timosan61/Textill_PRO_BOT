{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile.webhook"
  },
  "deploy": {
    "startCommand": "python -m uvicorn bot.webhook_server:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "on_failure"
  },
  "environments": {
    "production": {
      "variables": {
        "TELEGRAM_BOT_TOKEN": null,
        "WEBHOOK_SECRET_TOKEN": null,
        "BOT_USERNAME": null,
        "OPENAI_API_KEY": null,
        "ZEP_API_KEY": null,
        "PYTHONPATH": "/app"
      }
    }
  }
}