FROM python:3.12-slim

WORKDIR /app

# Устанавливаем только нужные зависимости
RUN pip install --no-cache-dir fastapi uvicorn pyTelegramBotAPI

# Копируем только один файл
COPY bot/simple_webhook.py ./simple_webhook.py

ENV PYTHONUNBUFFERED=1

EXPOSE $PORT

# Запускаем напрямую без модуля
CMD python -m uvicorn simple_webhook:app --host 0.0.0.0 --port $PORT