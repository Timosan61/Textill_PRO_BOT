FROM python:3.12-slim

WORKDIR /app

# Устанавливаем только нужные зависимости
RUN pip install --no-cache-dir fastapi uvicorn pyTelegramBotAPI

# Копируем код
COPY bot/ ./bot/
COPY .env ./ 

ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

EXPOSE $PORT

CMD python -m uvicorn bot.simple_webhook:app --host 0.0.0.0 --port $PORT